@page "/counter"

<h1><em>Counter</em></h1>

<p>Current count: <strong>@currentCount</strong></p>

<button class="btn btn-secondary" onclick="@IncrementCount">Click me</button>

@functions {
    int currentCount = 0;

    [Parameter]
    private int IncrementAmount { get; set; } = 2;

    void IncrementCount()
    {
        currentCount += IncrementAmount;
    }
}
